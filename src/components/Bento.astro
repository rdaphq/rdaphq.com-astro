---
import { Image } from 'astro:assets';
import Spotify from '../../public/spotify.png';
import Github from '../../public/github.png';
import Portfolio from '../../public/portfolio.png';
---

<div class="bento max-w-160 grid w-full">
    <a style="grid-area: s1;" href="https://dev.rdaphq.com" aria-label="Go to Rdap's Portfolio">
        <div class="bento-item">
            <p>Portfolio</p>
            <div class="bento-light"></div>
            <Image src={Portfolio} alt="Portfolio Icon" loading="eager" />
        </div>
    </a>
    <a style="grid-area: s2;" href="https://rdaphq.com/github" aria-label="Go to Rdap's GitHub">
        <div class="bento-item">
            <p>GitHub</p>
            <div class="bento-light"></div>
            <Image src={Github} alt="GitHub Icon" class="invert" loading="eager" />
        </div>
    </a>
    <a style="grid-area: s3;" href="https://rdaphq.com/spotify" aria-label="Go to Rdap's Spotify">
        <div class="bento-item">
            <p>Music</p>
            <div class="bento-light"></div>
            <Image src={Spotify} alt="Spotify Icon" loading="eager" />
        </div>
    </a>
</div>

<style>
    .bento {
        gap: .8rem;
        display: grid;
        padding: 1rem;
        margin-top: 2rem;
        grid-template-columns: repeat(2, 1fr);
        grid-template-areas:
        "s1 s1"
        "s2 s3";
    }

    .bento-item {
        overflow: hidden;
        position: relative;
        background-color: #ffffff05;
        border: 1px solid #ffffff10;
        transition: all .2s ease-in-out;
        border-radius: 1rem;
        height: 150px;

        p {
            color: #fff;
            font-size: 1.3rem;
            font-weight: 700;
            margin: 1rem;

            @media (width < 640px) {
                font-size: 1.1rem;
            }
        }

        img {
            width: 110px;
            position: absolute;
            transform: rotate(-10deg);
            bottom: -12px;
            right: -12px;

            @media (width < 640px) {
                width: 90px;
            }
        }
    }

    .bento-item::before {
        content: "";
        position: absolute;
        width: 250px;
        height: 300%;
        background: linear-gradient(to right, #ffffff05 40%, #ffffff40);
        transform: translateX(-120%);
        rotate: -8deg;
        z-index: 10;
        top: -50%;
        left: 0;
    }

    .bento-item:hover::before {
        animation: glassFx 1.2s ease-in-out;
    }

    @keyframes glassFx {
        from {
            transform: translateX(-120%);
        }

        to {
            transform: translateX(1000%);
        }
    }

    .bento-light {
        left: -20px;
        width: 130px;
        height: 60px;
        bottom: -20px;
        border-radius: 50%;
        position: absolute;
        background-color: #0073ee;
        filter: blur(55px);
        transition: all .2s ease;
    }

    .bento-item:hover {
        box-shadow: 0 0 .8rem #0073ee;
        backdrop-filter: blur(6px);
        transform: scale(1.03);
    }

    .bento-item:hover .bento-light {
        width: 160px;
        filter: blur(40px);
    }
</style>